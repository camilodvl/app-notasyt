<div class="col-md4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>New Note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="post">
        <div class="form-group">
            <input type="text" name="tittle" class="form-control" placeholder="tittle" autofocus/>
        </div>
        <div class="form-group">
            <input type="text-area" name="description" class="form-control" placeholder="Description"/>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block">Save</button>
        </div>
      </form>
    </div>
  </div>

</div>